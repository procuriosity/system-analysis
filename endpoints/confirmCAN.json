{
  "openapi": "3.0.0",
  "info": {
    "title": "CAN Confirmation",
    "version": "1.0",
    "description": ""
  },
  "servers": [
    {
      "url": "{host}"
    }
  ],
  "paths": {
    "/confirm/CAN/{Contract Process ID}/{CAN Identifier}": {
      "post": {
        "summary": "CAN Confirmation",
        "operationId": "updateEnquiry",
        "description": "",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "header",
            "name": "Authorization Token ",
            "description": "право доступа площадки к системе",
            "required": true
          },
          {
            "schema": {
              "type": "string"
            },
            "in": "header",
            "name": "Content-Type",
            "description": "тип payload",
            "required": true
          },
          {
            "schema": {
              "type": "string"
            },
            "in": "header",
            "name": "Entity Token ",
            "description": "token сущности Can",
            "required": true
          },
          {
            "schema": {
              "type": "string"
            },
            "in": "header",
            "name": "Transaction ID",
            "description": "transaction id",
            "required": true
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "awards": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "status": {
                            "type": "string",
                            "enum": [
                              "unsuccessful",
                              "active"
                            ]
                          },
                          "statusDetails": {
                            "type": "string",
                            "enum": [
                              "basedOnHumanDecision"
                            ]
                          },
                          "relatedBid": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "id",
                          "status",
                          "statusDetails",
                          "relatedBid"
                        ]
                      }
                    },
                    "bids": {
                      "type": "object",
                      "required": [
                        "details"
                      ],
                      "properties": {
                        "details": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "string"
                              },
                              "status": {
                                "type": "string",
                                "enum": [
                                  "valid",
                                  "disqualified"
                                ]
                              },
                              "statusDetails": {
                                "type": "string",
                                "enum": [
                                  "valid",
                                  "disqualified"
                                ]
                              }
                            },
                            "required": [
                              "id",
                              "status",
                              "statusDetails"
                            ]
                          }
                        }
                      }
                    },
                    "tender": {
                      "type": "object",
                      "required": [
                        "awardPeriod"
                      ],
                      "properties": {
                        "awardPeriod": {
                          "type": "object",
                          "required": [
                            "endDate"
                          ],
                          "properties": {
                            "endDate": {
                              "type": "string",
                              "format": "date-time"
                            }
                          }
                        }
                      }
                    },
                    "contracts": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "format": "uuid"
                          },
                          "status": {
                            "type": "string",
                            "enum": [
                              "pending",
                              "active"
                            ]
                          },
                          "statusDetails": {
                            "type": "string",
                            "enum": [
                              "concluded",
                              "issuing",
                              "approved",
                              "signed",
                              "execution",
                              "active",
                              "issued"
                            ]
                          }
                        },
                        "required": [
                          "id",
                          "status",
                          "statusDetails"
                        ]
                      }
                    }
                  },
                  "required": [
                    "awards",
                    "bids",
                    "tender",
                    "contracts"
                  ]
                }
              }
            }
          }
        }
      },
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "name": "Contract Process ID",
          "in": "path",
          "required": true,
          "description": "cpid/ocid "
        },
        {
          "schema": {
            "type": "string"
          },
          "name": "CAN Identifier",
          "in": "path",
          "required": true,
          "description": "Идентификатор вопроса"
        }
      ]
    }
  },
  "components": {
    "schemas": {}
  }
}